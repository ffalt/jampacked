{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2017",
      "es6",
      "ES2018.Promise"
    ],
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules/*",
    "local/",
    "__tests__/**/*-test.ts",
    "wdyr.js",
    "node_modules/",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "jest.transformer.js"
  ]
}
